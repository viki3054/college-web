generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TEACHER
  PARENT
  STUDENT
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

enum EmailStatus {
  QUEUED
  SENT
  FAILED
}

enum MaterialKind {
  STUDY_MATERIAL
  HOMEWORK
}

enum EnquiryStatus {
  NEW
  RESOLVED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  role         Role     @default(STUDENT)
  passwordHash String?
  isActive     Boolean  @default(true)
  permissions  String[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // NextAuth
  accounts Account[]
  sessions Session[]

  // Domain profiles (one-to-one, optional)
  student Student?
  parent  Parent?
  teacher Teacher?

  // Audit
  createdNotices   Notice[]           @relation("NoticeCreatedBy")
  createdEvents    Event[]            @relation("EventCreatedBy")
  createdHomework  Homework[]         @relation("HomeworkCreatedBy")
  createdMaterials StudyMaterial[]    @relation("MaterialCreatedBy")
  createdVideos    VideoLink[]        @relation("VideoCreatedBy")
  uploadedFiles    UploadedFile[]     @relation("FileUploadedBy")
  markedAttendance AttendanceRecord[] @relation("AttendanceMarkedBy")
  publishedResults Result[]           @relation("ResultPublishedBy")

  @@index([role])
}

// NextAuth Prisma Adapter models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Student {
  id          String   @id @default(cuid())
  userId      String   @unique
  admissionNo String   @unique
  rollNo      Int?
  dateOfBirth DateTime?
  classId     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  class Class? @relation(fields: [classId], references: [id], onDelete: SetNull)

  parents           ParentStudent[]
  attendanceEntries AttendanceEntry[]
  results           Result[]
}

model Parent {
  id     String @id @default(cuid())
  userId String @unique
  phone  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  children ParentStudent[]
}

model ParentStudent {
  id        String @id @default(cuid())
  parentId  String
  studentId String
  relation  String? // e.g. Mother/Father/Guardian

  parent  Parent  @relation(fields: [parentId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([parentId, studentId])
  @@index([studentId])
}

model Teacher {
  id         String @id @default(cuid())
  userId     String @unique
  employeeNo String @unique
  phone      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user             User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  homeroomClasses   Class[]         @relation("HomeroomTeacher")
  classAssignments TeacherClass[]
  subjectLinks     TeacherSubject[]
}

model Class {
  id           String  @id @default(cuid())
  name         String
  grade        String
  section      String?
  academicYear String?
  classTeacherId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  classTeacher Teacher? @relation("HomeroomTeacher", fields: [classTeacherId], references: [id], onDelete: SetNull)

  students           Student[]
  subjects           ClassSubject[]
  teacherAssignments TeacherClass[]
  attendanceRecords  AttendanceRecord[]
  notices            Notice[]
  events             Event[]
  homework           Homework[]
  materials          StudyMaterial[]
  videos             VideoLink[]
  timetables         Timetable[]

  @@unique([grade, section, academicYear])
}

model Subject {
  id   String @id @default(cuid())
  name String
  code String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  classes         ClassSubject[]
  teacherLinks    TeacherSubject[]
  attendanceMarks AttendanceRecord[]
  results         Result[]
  homework        Homework[]
  materials       StudyMaterial[]
  videos          VideoLink[]
}

model ClassSubject {
  id        String @id @default(cuid())
  classId   String
  subjectId String

  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@unique([classId, subjectId])
  @@index([subjectId])
}

model TeacherClass {
  id        String @id @default(cuid())
  teacherId String
  classId   String

  teacher Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@unique([teacherId, classId])
  @@index([classId])
}

model TeacherSubject {
  id        String @id @default(cuid())
  teacherId String
  subjectId String

  teacher Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@unique([teacherId, subjectId])
  @@index([subjectId])
}

model AttendanceRecord {
  id         String   @id @default(cuid())
  date       DateTime
  classId    String
  subjectId  String?
  markedById String
  notes      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  subject Subject? @relation(fields: [subjectId], references: [id], onDelete: SetNull)
  markedBy User    @relation("AttendanceMarkedBy", fields: [markedById], references: [id], onDelete: Restrict)
  entries  AttendanceEntry[]

  @@unique([date, classId, subjectId])
  @@index([classId, date])
}

model AttendanceEntry {
  id       String           @id @default(cuid())
  recordId String
  studentId String
  status   AttendanceStatus @default(PRESENT)
  note     String?

  createdAt DateTime @default(now())

  record  AttendanceRecord @relation(fields: [recordId], references: [id], onDelete: Cascade)
  student Student          @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([recordId, studentId])
  @@index([studentId])
}

model Result {
  id        String  @id @default(cuid())
  studentId String
  subjectId String
  term      String
  examName  String
  marks     Float
  maxMarks  Float   @default(100)
  grade     String?

  publishedAt   DateTime?
  publishedById String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student      Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subject      Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  publishedBy  User?   @relation("ResultPublishedBy", fields: [publishedById], references: [id], onDelete: SetNull)

  @@unique([studentId, subjectId, term, examName])
  @@index([studentId, subjectId])
  @@index([publishedAt])
}

model Notice {
  id           String  @id @default(cuid())
  title        String
  content      String
  audienceRole Role?
  classId      String?
  isPublished  Boolean @default(true)

  publishedAt      DateTime @default(now())
  emailNotifiedAt  DateTime?
  createdById      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  class     Class? @relation(fields: [classId], references: [id], onDelete: SetNull)
  createdBy User   @relation("NoticeCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  @@index([publishedAt])
  @@index([classId])
}

model Event {
  id           String  @id @default(cuid())
  title        String
  description  String
  location     String?
  startAt      DateTime
  endAt        DateTime?
  audienceRole Role?
  classId      String?
  isPublished  Boolean @default(true)

  emailNotifiedAt DateTime?
  createdById     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  class     Class? @relation(fields: [classId], references: [id], onDelete: SetNull)
  createdBy User   @relation("EventCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  @@index([startAt])
  @@index([classId])
}

model Homework {
  id          String   @id @default(cuid())
  classId     String
  subjectId   String?
  title       String
  description String
  dueAt       DateTime?

  attachmentName String?
  attachmentMime String?
  attachmentBytes Bytes?
  attachmentUrl  String?

  createdById String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  class     Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  subject   Subject? @relation(fields: [subjectId], references: [id], onDelete: SetNull)
  createdBy User    @relation("HomeworkCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  @@index([classId, subjectId])
  @@index([dueAt])
}

model StudyMaterial {
  id          String   @id @default(cuid())
  kind        MaterialKind @default(STUDY_MATERIAL)
  classId     String
  subjectId   String?
  title       String
  description String?

  attachmentName  String?
  attachmentMime  String?
  attachmentBytes Bytes?
  attachmentUrl   String?
  youtubeUrl      String?

  createdById String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  class     Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  subject   Subject? @relation(fields: [subjectId], references: [id], onDelete: SetNull)
  createdBy User    @relation("MaterialCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  @@index([classId, subjectId])
}

model VideoLink {
  id        String @id @default(cuid())
  title     String
  url       String
  classId   String?
  subjectId String?
  createdById String

  createdAt DateTime @default(now())

  class     Class?  @relation(fields: [classId], references: [id], onDelete: SetNull)
  subject   Subject? @relation(fields: [subjectId], references: [id], onDelete: SetNull)
  createdBy User    @relation("VideoCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  @@index([classId])
  @@index([subjectId])
}

model Timetable {
  id            String @id @default(cuid())
  classId       String
  title         String
  uploadedFileId String @unique

  createdAt DateTime @default(now())

  class        Class        @relation(fields: [classId], references: [id], onDelete: Cascade)
  uploadedFile UploadedFile @relation(fields: [uploadedFileId], references: [id], onDelete: Cascade)

  @@index([classId])
}

model UploadedFile {
  id       String @id @default(cuid())
  name     String
  mimeType String
  bytes    Bytes
  size     Int
  sha256   String

  uploadedById String

  createdAt DateTime @default(now())

  uploadedBy User @relation("FileUploadedBy", fields: [uploadedById], references: [id], onDelete: Restrict)

  timetable Timetable?
}

model EmailTemplate {
  id      String @id @default(cuid())
  key     String @unique
  subject String
  html    String
  text    String?
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmailLog {
  id          String     @id @default(cuid())
  to          String
  subject     String
  templateKey String?
  status      EmailStatus @default(QUEUED)
  error       String?
  messageId   String?
  context     Json?
  sentAt      DateTime?

  createdAt DateTime @default(now())
}

model NotificationSetting {
  id String @id @default("default")
  noticesEnabled    Boolean @default(true)
  eventsEnabled     Boolean @default(true)
  attendanceEnabled Boolean @default(true)
  resultsEnabled    Boolean @default(true)

  fromName String? // display name
  replyTo  String?

  updatedAt DateTime @updatedAt
}

model ContactEnquiry {
  id      String @id @default(cuid())
  name    String
  email   String
  phone   String?
  message String
  status  EnquiryStatus @default(NEW)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
